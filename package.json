{
    "name": "jcond",
    "version": "1.1.0",
    "description": "A condition logic engine for JavaScript/TypeScript",
    "main": "./dist/index.mjs",
    "module": "./dist/index.mjs",
    "types": "./dist/index.d.ts",
    "exports": {
        ".": {
            "types": "./dist/index.d.ts",
            "import": "./dist/index.mjs",
            "require": "./dist/index.cjs"
        }
    },
    "files": [
        "dist"
    ],
    "scripts": {
        "build": "rslib build",
        "dev": "rslib build --watch",
        "clean": "rm -rf node_modules dist"
    },
    "keywords": [
        "conditions",
        "logic-engine",
        "typescript",
        "javascript",
        "rules"
    ],
    "author": "Sheikh Ariful Islam",
    "license": "MIT",
    "repository": {
        "type": "git",
        "url": "https://github.com/sheikharifulislam/jcond.git"
    },
    "bugs": {
        "url": "https://github.com/sheikharifulislam/jcond/issues"
    },
    "homepage": "https://github.com/sheikharifulislam/jcond#readme",
    "packageManager": "pnpm@10.6.2",
    "devDependencies": {
        "@rslib/core": "^0.17.1",
        "@types/node": "^24.2.0",
        "nodemon": "^3.1.10",
        "ts-node": "^10.9.2",
        "typescript": "^5.9.2"
    },
    "dependencies": {
        "es-toolkit": "^1.39.8"
    }
}
